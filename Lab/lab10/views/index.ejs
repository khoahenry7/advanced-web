<script src="/socket.io/socket.io.js"></script>
<script>
    // moment().format()
    const socket = io()//io("http://localhost:3000/")
    let id = ""

    const chatBox = document.querySelector(".conversation")

    if (chatBox) {
        chatBox.scrollTop = chatBox.scrollHeight
    }

    function appendTheirMessage(data) {
        let mess = document.createElement("div")
        mess.innerHTML = `${data}
                            <span class="time">08:59</span>
                        `
        mess.classList.add("message")
        mess.classList.add("their-message")
        $(".conversation").append(mess)
        if (chatBox) {
            chatBox.scrollTop = chatBox.scrollHeight
        }
    }

    function appendMyMessage(data) {
        let mess = document.createElement("div")
        mess.innerHTML = `${data}
                            <span class="time">08:59</span>
                        `
        mess.classList.add("message")
        mess.classList.add("my-message")
        $(".conversation").append(mess)
        if (chatBox) {
            chatBox.scrollTop = chatBox.scrollHeight
        }
    }

    //client gửi dữ liệu lên server

    $("#send").click(function () {
        const time = new Date()
        // console.log(moment())
        id = socket.id
        const messageBox = $("#message-box")
        socket.emit("onmessage", { id: id, message: messageBox.val(), time: time })
        appendMyMessage(messageBox.val())
        messageBox.val("")
        messageBox.focus()
    })


    socket.on("server-sent-message", function (data) {
        if (data.id === id) {
            return
        }
        appendTheirMessage(data.message)
        // $(".conversation").append(data)
    })
</script>

