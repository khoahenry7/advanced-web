<%- include('layouts/header.ejs'); -%>
    <%if (locals.product) { %>
        <div class="m-10">
            <div class="flex flex-col justify-center items-center my-10">
                <h1 class="text-3xl font-bold leading-normal mt-0 mb-2 text-green-500 mb-5">
                    Edit Product
                </h1>
                <form class="w-2/4  my-0 mx-auto pt-14 px-14 pb-10 border rounded border-green-400" method="POST"
                    action="/edit/<%= product.product_id %>?_method=PUT" enctype="multipart/form-data">
                    <div class="lg:flex lg:items-center mb-6">
                        <div class="lg:w-1/3">
                            <label class="block text-gray-500 font-bold lg:text-left mb-1 lg:mb-0 pr-1"
                                for="product-name">
                                Product Name
                            </label>
                        </div>
                        <div class="lg:w-2/3">
                            <input
                                class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
                                id="product-name" value="<%= product.name %>" type="text" name="productName"
                                placeholder="Enter product name">
                        </div>
                    </div>
                    <div class="lg:flex lg:items-center mb-6">
                        <div class="lg:w-1/3">
                            <label class="block text-gray-500 font-bold lg:text-left mb-1 lg:mb-0 pr-1" for="price">
                                Price
                            </label>
                        </div>
                        <div class="lg:w-2/3">
                            <input
                                class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
                                id="price" type="number" value="<%= product.price %>" name="price"
                                placeholder="Enter price">
                        </div>
                    </div>
                    <div class="lg:flex lg:items-center mb-6">
                        <div class="lg:w-1/3">
                            <label class="block text-gray-500 font-bold lg:text-left mb-1 lg:mb-0 pr-1" for="image">
                                Product Image
                            </label>
                        </div>
                        <div class="lg:w-2/3">
                            <label
                                class="flex flex-col items-center py-2 bg-white rounded-md shadow-sm border border-blue cursor-pointer hover:bg-green-500 hover:text-white text-green-500 ease-linear transition-all duration-150">
                                <i class="fas fa-cloud-upload-alt fa-2x"></i>
                                <input type='file' class="hidden" id="image" name="image" src="<%= product.image %>" />
                            </label>
                        </div>
                    </div>
                    <div class="flex mb-4 items-start justify-start">
                        <div class="lg:w-1/3">
                            <label class="block text-gray-500 font-bold lg:text-left mb-1 lg:mb-0 pr-1"
                                for="description">
                                Description
                            </label>
                        </div>
                        <div class="lg:w-2/3">
                            <textarea
                                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:ring-1 focus:ring-green-600"
                                rows="3" placeholder="Add description"
                                name="description"><%= product.description %></textarea>
                        </div>
                    </div>

                    <%if (locals.error) { %>
                        <div class="flex mb-6 items-start justify-start">
                            <div class="lg:w-1/3">
                            </div>
                            <div class="lg:w-2/3">
                                <div class="text-left text-red-700">
                                    <%- error %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <div class="flex items-center">
                                <div class="w-1/3"></div>
                                <div class="w-2/3">
                                    <button
                                        class="shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                                        type="submit">
                                        Edit Product
                                    </button>
                                </div>
                            </div>

                </form>
            </div>
        </div>

        <% } %>